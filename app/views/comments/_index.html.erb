<% book.comments.each do |comment| %>
        <tr>
          <td><%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag(comment.user, :profile_image, fallback: "no-image-icon.jpg", size: "50x50") %><br>
          <%= comment.user.name %>
          <% end %>
          </td>
          <td><%= comment.comment %></td>
          <% if comment.user == current_user %>
            <td>
              <%= link_to "Destroy", book_comment_path(comment.book, comment), class: 'btn-sm btn-danger', method: :delete, remote: true %>
            </td>
          <% end %>
          </tr>
        <% end %>
 